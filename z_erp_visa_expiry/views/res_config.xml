<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_visa" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.visa</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="71"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@groups='hr.group_hr_manager']" position="inside">
                    <h2>Visa Expiry Notification</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" groups="hr.group_hr_manager">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Visa expiry Days Before" for="visa_expiry_notify_days"
                                               class="col-lg-4 o_light_label"/>
                                        <field name="visa_expiry_notify_days"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

        </field>
    </record>

</odoo>